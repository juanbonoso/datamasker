{
  "dataSource": {
    "type": "SqlServer",
    "config": {
      "connectionString": "Server=localhost;Database=MaskingDemo;Trusted_Connection=True;Integrated Security=SSPI;"
    }
  },
  "tables": [
    {
      "name": "Users",
      "schema": "dbo",
      "primaryKeyColumn": "Id",
      "columns": [
        {
          "name": "Name",
          "type": "FirstName"
        },
        {
          "name": "SSN",
          "type": "Bogus",
          "stringFormatPattern": "###-##-####"
        },
        {
          "name": "Email",
          "type": "Bogus",
          "unique": true,
          "stringFormatPattern": "{{internet.email}}"
        },
        {
          "name": "Phone",
          "type": "PhoneNumber"
        }
      ]
    }
  ]
}
